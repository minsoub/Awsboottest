{{>layout/header}}
    <h1>Spring Boot Web Service Test</h1>
    <div class="col-md-12">
        <!-- Login area -->
        <div class="row">
            <div class="col-md-6">
                <a href="/boards/write" role="button" class="btn btn-primary">Write</a>
                {{#userName}}
                    Logged in as: <span id="user">{{userName}}</span>
                    <a href="/logout" class="btn btn-info active" role="button">Logout</a>
                {{/userName}}
                {{^userName}}
                    <a href="/oauth2/authorization/google" class="btn btn-success active" role="button">Google Login</a>
                {{/userName}}
            </div>
        </div>
    </div>
    <br>
    <!-- List area -->
    <table class="table table-horizontal table-bordered">
        <thead class="thead-strong">
        <tr>
            <th>No</th>
            <th>Title</th>
            <th>Author</th>
            <th>Last Modified Date</th>
        </tr>
        </thead>
        <tbody id="tbody">
        {{#boards}}
            <tr>
                <td>{{id}}</td>
                <td><a href="/boards/update/{{id}}">{{title}}</a></td>
                <td>{{author}}</td>
                <td>{{modifiedDate}}</td>
            </tr>
        {{/boards}}
        </tbody>
    </table>
{{>layout/footer}}